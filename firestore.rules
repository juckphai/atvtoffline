rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. อนุญาตให้สมาชิกทุกคน (ที่ Login แล้ว) เข้าถึงข้อมูลกิจกรรมส่วนกลางได้
    match /public_activities/{document=**} {
      allow read, write: if request.auth != null;
    }

    // 2. อนุญาตให้สมาชิกทุกคน (ที่ Login แล้ว) เข้าถึงการตั้งค่าส่วนกลางได้
    match /public_settings/{document=**} {
      allow read, write: if request.auth != null;
    }

    // 3. (สำรอง) อนุญาตให้เข้าถึงข้อมูลส่วนตัว (เผื่ออนาคตกลับมาใช้ Private Mode)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

  }
}